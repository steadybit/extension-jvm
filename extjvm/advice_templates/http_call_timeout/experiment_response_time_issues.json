{
  "name": "${target.application.name} Response Time Issues",
  "lanes": [
    {
      "steps": [
        {
          "type": "action",
          "ignoreFailure": false,
          "parameters": {
						"delay": "500ms",
						"duration": "60s",
						"delayJitter": true,
						"hostAddress": "${target.application.http-outgoing-calls[0]}"
					},
          "actionType": "com.steadybit.extension_jvm.spring-httpclient-delay-attack",
          "radius": {
            "targetType": "com.steadybit.extension_jvm.application",
            "predicate": {
              "operator": "AND",
              "predicates": [
                {
                  "key": "application.name",
                  "operator": "EQUALS",
                  "values": [
                    "${target.application.name}"
                  ]
                }
              ]
            },
            "query": null,
            "percentage": 50
          }
        }
      ]
    }
  ]
}
